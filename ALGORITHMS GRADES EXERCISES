//JAVASCRIPT CODE 
let student1 = "Eduardo";
let grade1 = 100;
let grade2 = 200;
let grade3 = 300;
let grade4 = 400;
let average;
average = (grade1 + grade2 + grade3 + grade4) /4;
console.log("The overall grade of " + student1 + " is " + average);
